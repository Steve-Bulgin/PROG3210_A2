<?xml version="1.0" encoding="utf-8"?>
<!--
  FileName: activity_scoreboard.xml
  Purpose: Layout for the scoreboard screen
  Revision History
   		Steven Bulgin, 2016.11.09: Created
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headers">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginLeft="25dp"
            android:textColor="#FFFFFF"
            android:text="First Name"
            android:id="@+id/lblsbFName" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/lblsbFName"
            android:text="Last Name"
            android:id="@+id/lblsbLName" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/lblsbLName"
            android:text="Wins"
            android:id="@+id/lblsbWins" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/lblsbWins"
            android:text="Loses"
            android:id="@+id/lblsbLoses" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/lblsbLoses"
            android:text="Ties"
            android:id="@+id/lblsbTies" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headers">

        <ListView
            android:id="@+id/scoreboard_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false" />

    </LinearLayout>



</RelativeLayout>