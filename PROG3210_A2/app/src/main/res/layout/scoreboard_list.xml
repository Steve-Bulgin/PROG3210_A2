<?xml version="1.0" encoding="utf-8"?>
<!--
  FileName: scoreboard_list.xml
  Purpose: Layout for the scoreboard
  Revision History
           Steven Bulgin, 2016.11.15: Created
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblFName"
            android:layout_width="wrap_content"
            android:layout_weight="25"
            android:layout_marginEnd="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:text=""
            android:textColor="#FFFFFF"  />

        <TextView
            android:id="@+id/lblLName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="50"
            android:text=""
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/lblWins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="#FFFFFF"  />
        <TextView
            android:id="@+id/lblLoses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="#FFFFFF"  />
        <TextView
            android:id="@+id/lblTies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="#FFFFFF"  />
    </LinearLayout>
</LinearLayout>